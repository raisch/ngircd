[Unit]
Description=S3X3 Next Generation IRC Daemon
After=network.target

[Service]
Type=forking
User=ngircd
Group=ngircd
CapabilityBoundingSet=CAP_SETUID CAP_SETGID CAP_SYS_CHROOT CAP_NET_BIND_SERVICE
PrivateTmp=yes
PrivateDevices=yes
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true
RuntimeDirectory=/opt/ngircd
RuntimeDirectoryMode=750
ExecStart=/usr/local/sbin/ngircd
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target
